{
  "name": "ecs-test-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "biome check .",
    "format": "biome format . --write",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:ci": "bun test",
    "typecheck": "tsc --noEmit",
    "check:full": "bun run typecheck && bun run lint && bun test",
    "dev": "bun run docs:dev",
    "docs:build": "bun run apps/docs/build/build.ts",
    "docs:dev": "bun run apps/docs/build/dev.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "latest",
    "@types/bun": "latest",
    "happy-dom": "^17.4.4",
    "typedoc": "^0.28.17",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5"
  }
}
